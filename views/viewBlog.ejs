  <!-- use &gt%- so html renders as html 
    and not as escape strings as is the case with  &gt%=   -->
    <%- include("./partials/header.ejs")%>
  <body>
       <!-- Use - instead of = in ejs tag so var not special escaped etc -->
       <%- include("./partials/navigation.ejs");  %>

  

    <div class="createBlog content">
      <form >
        <label for="title">Blog Title:</label>
        <input type="text" name="title" id="title" value="<%= blog.title %>""  required >
         <label for="snippet">Blog snippet:</label>
        <input type="text" name="snippet" id="snippet" value="<%= blog.snippet %>" required />
        <label for="body">Blog body:</label>
        <input name="body" id="body" required value="<%= blog.body %>"" >
        <button>Submit</button>
      </form>
    </div>
    <%- include("./partials/footer.ejs"); %>
  </body>
